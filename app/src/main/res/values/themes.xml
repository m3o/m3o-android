<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.M3OMobile" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">?attr/isLightTheme</item>
    </style>

    <style name="Theme.M3OMobile.NoActionBar" parent="Theme.M3OMobile">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.AboutPage" parent="about_About">
        <item name="aboutBackground">#1c1b1f</item>
    </style>

</resources>